<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TabPane layoutX="-2.0" prefHeight="700.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Open">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="chooser" layoutX="20.0" layoutY="24.0" mnemonicParsing="false" onAction="#chooseFile" text="Choose File" />
                        <Label layoutX="14.0" layoutY="71.0" text="File Opened" />
                        <Label layoutX="14.0" layoutY="103.0" text="File Description" />
                        <TextField fx:id="FileOpen" layoutX="138.0" layoutY="67.0" prefWidth="750.0" />
                        <TextField fx:id="FileDesc" layoutX="138.0" layoutY="99.0" prefWidth="750.0" />
                        <TextArea fx:id="seq_disp" layoutX="224.0" layoutY="134.0" prefHeight="529.0" prefWidth="663.0" />
                        <Label layoutX="55.0" layoutY="154.0" text="Genome Composition" />
                        <Label layoutX="10.0" layoutY="209.0" text="Length">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="seq_len" layoutX="65.0" layoutY="205.0" />
                        <TextField fx:id="A_perc" layoutX="65.0" layoutY="266.0" />
                        <TextField fx:id="T_perc" layoutX="65.0" layoutY="316.0" />
                        <TextField fx:id="G_perc" layoutX="65.0" layoutY="366.0" />
                        <TextField fx:id="C_perc" layoutX="65.0" layoutY="416.0" />
                        <Button fx:id="A" layoutX="10.0" layoutY="266.0" mnemonicParsing="false" onAction="#changeA" prefWidth="40.0" text="A%" />
                        <Button fx:id="T" layoutX="10.0" layoutY="316.0" mnemonicParsing="false" onAction="#changeT" prefWidth="40.0" text="T%" />
                        <Button fx:id="G" layoutX="10.0" layoutY="366.0" mnemonicParsing="false" onAction="#changeG" prefWidth="40.0" text="G%" />
                        <Button fx:id="C" layoutX="10.0" layoutY="416.0" mnemonicParsing="false" onAction="#changeC" prefWidth="40.0" text="C%" />
                     </children>
                  </Pane>
               </content>
            </Tab>
          <Tab text="Skew Plotter">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <RadioButton fx:id="GC" layoutX="24.0" layoutY="54.0" mnemonicParsing="false" text="G-C Skew">
                           <toggleGroup>
                              <ToggleGroup fx:id="grp" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="AT" layoutX="134.0" layoutY="54.0" mnemonicParsing="false" text="A-T Skew" toggleGroup="$grp" />
                        <Label layoutX="24.0" layoutY="22.0" text="Choose Skew Type :" />
                        <Pane fx:id="plt" layoutX="18.0" layoutY="140.0" prefHeight="514.0" prefWidth="870.0" />
                        <Button fx:id="plot" layoutX="252.0" layoutY="50.0" mnemonicParsing="false" onAction="#plot_skew" text="Plot" />
                     </children></Pane>
               </content>
            </Tab>
            <Tab text="Ori Finder">
               <content>
                  <Pane fx:id="oriGC" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="find_ori" layoutX="28.0" layoutY="34.0" mnemonicParsing="false" onAction="#display_ori" text="Find Ori" />
                        <TextField fx:id="ori" layoutX="115.0" layoutY="34.0" />
                     </children></Pane>
               </content>
            </Tab>
            <Tab text="Pattern Finder">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
