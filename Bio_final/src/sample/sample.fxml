                        <Label layoutX="23.0" layoutY="234.0" style="-fx-font-family: Optima;" text="Length" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="seq_len" layoutX="77.0" layoutY="231.0" prefHeight="27.0" prefWidth="149.0" style="-fx-background-color: #fff; -fx-background-radius: 15px;" />
                        <TextField fx:id="A_perc" layoutX="77.0" layoutY="278.0" prefHeight="27.0" prefWidth="148.0" style="-fx-background-color: #fff; -fx-background-radius: 15px;" />
                        <TextField fx:id="T_perc" layoutX="77.0" layoutY="328.0" prefHeight="27.0" prefWidth="148.0" style="-fx-background-color: #fff; -fx-background-radius: 15px;" />
                        <TextField fx:id="G_perc" layoutX="77.0" layoutY="378.0" prefHeight="27.0" prefWidth="148.0" style="-fx-background-color: #fff; -fx-background-radius: 15px;" />
                        <TextField fx:id="C_perc" layoutX="77.0" layoutY="428.0" prefHeight="27.0" prefWidth="148.0" style="-fx-background-color: #fff; -fx-background-radius: 15px;" />
                        <Button fx:id="A" layoutX="22.0" layoutY="278.0" mnemonicParsing="false" onAction="#changeA" prefWidth="40.0" style="-fx-background-color: #2b5d6b; -fx-background-radius: 15px; -fx-font-family: Optima;" text="A%" textFill="WHITE" />
                        <Button fx:id="T" layoutX="22.0" layoutY="328.0" mnemonicParsing="false" onAction="#changeT" prefWidth="40.0" style="-fx-font-family: Optima; -fx-background-color: #2b5d6b; -fx-background-radius: 15px;" text="T%" textFill="WHITE" />
                        <Button fx:id="G" layoutX="22.0" layoutY="378.0" mnemonicParsing="false" onAction="#changeG" prefWidth="40.0" style="-fx-background-color: #2b5d6b; -fx-font-family: Optima; -fx-background-radius: 15px;" text="G%" textFill="WHITE" />
                        <Button fx:id="C" layoutX="22.0" layoutY="428.0" mnemonicParsing="false" onAction="#changeC" prefWidth="40.0" style="-fx-background-color: #2b5d6b; -fx-font-family: Optima; -fx-background-radius: 15px;" text="C%" textFill="WHITE" />
                     </children>
                  </Pane>
               </content>
            </Tab>
          <Tab style="-fx-font-family: Optima;" text="Skew Plotter">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <RadioButton fx:id="GC" layoutX="29.0" layoutY="68.0" mnemonicParsing="false" style="-fx-font-family: Optima;" text="G-C Skew" textFill="WHITE">
                           <toggleGroup>
                              <ToggleGroup fx:id="grp" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="AT" layoutX="142.0" layoutY="68.0" mnemonicParsing="false" style="-fx-font-family: Optima;" text="A-T Skew" textFill="WHITE" toggleGroup="$grp" />
                        <Label layoutX="24.0" layoutY="22.0" style="-fx-font-size: 18; -fx-font-family: Optima;" text="Choose Skew Type :" textFill="WHITE" />
                        <Pane fx:id="plt" layoutX="37.0" layoutY="111.0" prefHeight="514.0" prefWidth="823.0" />
                        <Button fx:id="plot" layoutX="253.0" layoutY="64.0" mnemonicParsing="false" onAction="#plot_skew" prefHeight="27.0" prefWidth="54.0" style="-fx-font-family: Optima; -fx-background-color: #2b5d6b; -fx-background-radius: 15px;" text="Plot" textFill="WHITE" />
                     </children></Pane>
               </content>
            </Tab>
            <Tab style="-fx-font-family: Optima;" text="Ori Finder">
               <content>
                  <Pane fx:id="oriGC" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="find_ori" layoutX="28.0" layoutY="34.0" mnemonicParsing="false" onAction="#display_ori" style="-fx-font-family: Optima; -fx-background-color: #2b5d6b; -fx-background-radius: 15px;" text="Find Ori" textFill="WHITE" />
                        <TextField fx:id="ori" layoutX="115.0" layoutY="34.0" style="-fx-background-color: #fff; -fx-background-radius: 15px;" />
                     </children></Pane>
               </content>
            </Tab>
            <Tab style="-fx-font-family: Optima;" text="Pattern Finder">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
